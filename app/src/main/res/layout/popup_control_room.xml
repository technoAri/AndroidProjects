<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10sp"
    android:gravity="center"
    android:background="#DCDCDC">

    <ImageView
        android:id="@+id/cross_btn_dialog_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_gravity="end"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:text="Name of the Captain:"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/tv_name_of_captain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:text="Captain Name"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Current Location:"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:text="Location"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Name of the Ship:"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/ed_name_of_ship"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:hint="Enter name of your ship"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Detaild messege:"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/messege"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please let us know what kind of problem you have faced."
        android:inputType="textMultiLine"
        android:lines="5"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_submit_messege"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Submit"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"/>

</LinearLayout>